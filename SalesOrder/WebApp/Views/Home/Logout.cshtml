@{
}
@model Login
<html>
<head>
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 500px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }


        form {
            margin-top: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%; /* Adjust width as needed */
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 2px solid #000;
            border-radius: 4px;
        }

        input[type="submit"] {
            background-color: #4caf50;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            margin-top: 10px;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        input[type="password"] {
            width: 100%;
            height: 40px;
            border-radius: 4px;
        }

        .textdanger {
            color: ghostwhite;
            font-size: medium;
        }
      
        
    </style>
</head>
<body>
    <h1>Logout</h1>
    <div class="container">
        <form asp-controller="Home" asp-action="Logout" method="post">
            <label for="username">Are you sure you want to logout ?</label>
            <input asp-for="username" type="text" />
            <span asp-validation-for="username" class="textdanger"></span>
            <br />
            <br />
            <input type="Submit" value="Submit" />
            <h6>@ViewBag.ErrorMessage</h6>
        </form>
    </div>
</body>
</html>